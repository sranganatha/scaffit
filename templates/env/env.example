# Environment Variables
# Copy this file to .env.local and fill in your values
# This template adapts based on your project type and selected features

# Framework-specific configuration
# Detected automatically based on your project type: {{FRAMEWORK}}

{{#if isNextJS}}
# Next.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"
{{/if}}

{{#if isExpress}}
# Express Configuration
PORT=3000
NODE_ENV="development"
{{/if}}

{{#if isVite}}
# Vite Configuration
VITE_API_URL="http://localhost:3000"
{{/if}}

{{#if isNode}}
# Node.js Configuration
NODE_ENV="development"
PORT=3000
{{/if}}

# Feature-specific variables (selected during installation)

{{#if includeDatabase}}
# Database
DATABASE_URL="postgresql://username:password@localhost:5432/database"
{{/if}}

{{#if includeAuth}}
# Authentication
{{#if isNextJS}}
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"
{{else}}
JWT_SECRET="your-jwt-secret-here"
SESSION_SECRET="your-session-secret-here"
{{/if}}
{{/if}}

{{#if includeAPIs}}
# API Keys
OPENAI_API_KEY="your-openai-key-here"
STRIPE_SECRET_KEY="your-stripe-secret-key"
{{/if}}

{{#if includeEmail}}
# Email Service
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
{{/if}}

{{#if includeStorage}}
# File Storage
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_BUCKET_NAME="your-bucket-name"
{{/if}}

{{#if includeAnalytics}}
# Analytics
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
POSTHOG_KEY="your-posthog-key"
{{/if}}

# Additional custom variables
# Add your own environment variables below
{{CUSTOM_VARIABLES}}